mixin otherHeroesSlide(number)
	case number
		when 1
			+other-heroes-item({
				href: '/article/1',
				img: '/images/heroes/1@2x.jpg',
				name: 'Джованни, обувщик',
				text: 'о&nbsp;работе подмастерьем, традициях и&nbsp;любимом деле.',
			})
		when 2
			+other-heroes-item({
				href: '/article/2',
				img: '/images/heroes/2@2x.jpg',
				name: 'Даниэла, владелица фруктово-овощной лавки',
				text: 'О&nbsp;семейном бизнесе, который начался 65&nbsp;лет назад.',
			})
		when 3
			+other-heroes-item({
				href: '/article/3',
				img: '/images/heroes/3@2x.jpg',
				name: 'Массимилиано, владелец ресторана.',
				text: 'Об&nbsp;оливковой роще и&nbsp;персонаже из&nbsp;&laquo;Крестного отца&raquo;.'
			})
		when 4
			+other-heroes-item({
				href: '/article/4',
				img: '/images/heroes/4@2x.jpg',
				name: 'Симоне, мастер по&nbsp;ремонту.',
				text: 'О&nbsp;том, кто ломает велосипеды и&nbsp;куда приезжал Папа Франциск.'
			})
		when 5
			+other-heroes-item({
				href: '/article/5',
				img: '/images/heroes/5@2x.jpg',
				name: 'Эммануэль, разнорабочий в&nbsp;садах Боболи.',
				text: 'О&nbsp;красоте Флоренции и&nbsp;невероятных рассветах.'
			})